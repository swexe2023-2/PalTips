<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <td>
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="form-group">
          <%= f.label :content_question, '質問内容' %>
          <%= f.text_field :content_question, class: 'form-control' %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="form-group">
          <%= f.label :subject_id %>
          <%= f.collection_select :subject_id, Subject.all, :id, :subject_name, include_blank: "授業カテゴリーを選択してください", class: 'form-control' %>
        </div>
      </td>
    </tr>
  </thead>
</table>

<% if @question.persisted? %> <!--@questionがデータベースに保存されているかどうか-->
  <%= f.submit '編集', class: 'btn btn-primary' %>
<% else %>
  <%= f.submit '質問投稿', class: 'btn btn-primary' %>
<% end %>

<style>
    .table{
        margin: auto;
        width: 80%; 
    }
  
    .btn-primary {
        float: left;
        margin-top: 20px;
        margin-left: 110px;
    }
</style>